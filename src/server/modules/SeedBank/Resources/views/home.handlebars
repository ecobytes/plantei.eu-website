      </ul>
      <!--<ul class="nav nav-pills navbar-nav">
      </ul>-->
    </nav>
  </div>
</header>

{{!-- END MENU SBUBSTITUTION --}}
<div class="pageWrap background-primary">
  <div class="container">
    <!-- <div class="row lmt"> -->
      <div class="col-md-6 text-center">
        <h1>{{messages.latestAdditions}}</h1>
        <table class="table">
          <thead>
            <tr>
              <th>Nome comum</th>
              <th>Nome ciêntifico</th>
              <!-- <th>Disponível</th>
              <th>Pública</th> -->
            </tr>
          </thead>
          <tbody>
          {{#each seeds}}
            <tr data-seed_id="{{id}}">
              <td>{{common_name}}</td>
              <td>{{sci_name}}</td>
              <!-- <td style="text-align: center;">{{#if available.1}}X{{/if}}</td>
              <td style="text-align: center;">{{#if public.1}}X{{/if}}</td> -->
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
      <div class="col-md-6">
        <h1>{{messages.latestMessages}}<span class="badge">
          {{unreadmessages}}
        </span></h1>
        <table class="table">
          <thead>
            <tr>
              <th>{{messages.subject}}</th>
              <th>{{messages.date}}</th>
              <th>{{messages.unread}}/{{messages.read}}</th>
            </tr>
          </thead>
          <tbody>
          {{#each usermessages}}
            <tr data-message_id="{{id}}" {{#unless pivot.read.1}}style="font-weight: bold;"{{/unless}}>
              <td>{{subject}}</td>
              <td>({{id}}){{created_at}}</td>
              <td style="text-align: center;">
					{{#if pivot.read.1}} {{../../messages.read}} 
						{{else}} {{../../messages.unread}} 
					{{/if}}
				</td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
    <!-- </div> -->
  </div>
</div>

{{>scripts}}
<script>
  $('tbody tr').on('click', function () {
	window.open('/seedbank/register/' + $(this).data('seed_id'), '_self');
    return false;
    }).mouseover(function () {
    $(this).addClass('active');
    }).mouseout(function () {
    $(this).removeClass('active');
  });
  $('#new_seed').on('click', function () {
    window.open('/seedbank/register', '_self');
	return false;
  });
</script>
