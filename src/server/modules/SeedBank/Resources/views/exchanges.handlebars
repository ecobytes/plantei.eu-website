{{> header}}
{{> menu}}
<div class="pageWrap background-primary">
  <div class="container">
    <!-- <div class="row lmt"> -->
      <div class="col-md-12 text-center">
        <h1>Trocas pendentes</h1>
        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true" style="color: black;">
          <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingSent">
              <h4 class="panel-title">
                <a style="color: black;" role="button" data-toggle="collapse" href="#transactionsSent" aria-expanded="true" aria-controls="collapseSent">
                  {{messages.sent_requests}}
                </a>
              </h4>
            </div>
            {{#if transactionsBy}}
            <div id="transactionsSent" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingSent">
              <div class="panel-body">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>{{../messages.common_name}}</th>
                          <th>{{../messages.date}}</th>
                          <th>{{../messages.location}}</th>
                          <th></th>
                        </tr>
                      </thead>
                      <tbody>
                      {{#each transactionsBy}}
                        <tr data-exchange="{{id}}">
                          <td>{{common_name}}</td>
                          <td>{{updated_at}}</td>
                          <td>{{place_name}}</td>
                          <td>
                          {{#if accepted.0}}
                          {{#if completed.1}}
                            <button type="button" class="btn btn-sm btn-warning" data-button="cancelled">{{../../messages.cancelled}}cancelled</button>
							{{else}}
                            <button type="button" class="btn btn-sm btn-warning" data-button="pending">{{../../messages.pending}}pending</button>
                            <button type="button" class="btn btn-sm btn-danger" data-button="reject">{{../../messages.cancel}}cancel</button>
                          {{/if}}
                          {{/if}}
                          {{#if accepted.1}}
                            <button type="button" class="btn btn-sm btn-danger" data-button="cancelled">{{../../messages.refused}}refused</button>
                          {{/if}}
                          {{#if accepted.2}}
                          {{#if completed.0}}
                            <button type="button" class="btn btn-sm btn-default" data-button="complete">{{../../../messages.confirm}}confirm</button>
                            <button type="button" class="btn btn-sm btn-danger" data-button="reject">{{../../../messages.cancel}}cancel</button>
							{{!-- button to  cancel --}}
                          {{/if}}
                          {{#if completed.1}}
                            <button type="button" class="btn btn-sm btn-warning" data-button="cancelled">{{../../messages.cancelled}}cancelled</button>
                          {{/if}}
                          {{#if completed.2}}
                            <button type="button" class="btn btn-sm btn-success" data-button="confirmed">{{../../messages.finished}}finished</button>
                          {{/if}}
                          {{/if}}
                          </td>
                        </tr>
                      {{/each}}
                      </tbody>
                    </table>
              </div>
            </div>
            {{/if}}
          </div>
          <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingReceived">
              <h4 class="panel-title">
                <a  style="color: black;" class="collapsed" role="button" data-toggle="collapse" href="#transactionsReceived" aria-expanded="false" aria-controls="transactionsReceived">
                  {{messages.received_requests}}
                </a>
              </h4>
            </div>
            {{#unless transactionsTo.empty}}
            <div id="transactionsReceived" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingReceived">
              <div class="panel-body">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>{{messages.common_name}}</th>
                          <th>{{messages.date}}</th>
                          <th>{{messages.location}}</th>
                          <th></th>
                        </tr>
                      </thead>
                      <tbody>
                      {{#each transactionsTo}}
                        <tr data-exchange="{{id}}">
                          <td>{{common_name}}</td>
                          <td>{{updated_at}}</td>
                          <td>{{place_name}}</td>
                          <td>
                            {{#if accepted.0}}
                            <button type="button" class="btn btn-sm btn-danger" data-button="accept">{{../../messages.accept}}accept</button>
                            <button type="button" class="btn btn-sm btn-danger" data-button="reject">{{../../messages.reject}}reject</button>
							{{!-- button to  reject --}}
                            {{/if}}
                          {{#if accepted.1}}
                            <button type="button" class="btn btn-sm btn-danger" data-button="cancelled">{{../../messages.cancelled}}cancelled</button>
                          {{/if}}
                          {{#if accepted.2}}
                          {{#if completed.0}}
                            <button type="button" class="btn btn-sm btn-default" data-button="accepted">{{../../messages.accepted}}accepted</button>
                            <button type="button" class="btn btn-sm btn-danger" data-button="pending">{{../../messages.pending}}pending</button>
                          {{/if}}
                            <button type="button" class="btn btn-sm btn-danger" data-button="reject">{{../../messages.cancel}}cancel</button>
							{{!-- button to  cancel --}}
                          {{/if}}
                          {{#if completed.1}}
                            <button type="button" class="btn btn-sm btn-warning" data-button="cancelled">{{../../messages.cancelled}}cancelled</button>
                          {{/if}}
                          {{#if completed.2}}
                            <button type="button" class="btn btn-sm btn-success" data-button="confirmed">{{../../messages.finished}}finished</button>
                          {{/if}}
                            </td>
                        </tr>
                      {{/each}}
                      </tbody>
                    </table>
              </div>
            </div>
            {{/unless}}
          </div>
        </div>
      </div>
    <!-- </div> -->
  </div>
</div>

{{>scripts}}
<script src="/js/laravel-bootstrap-modal-form.js"></script>
<script>
  $('.table').on('click', 'tbody tr button', function () {
    console.log($(this).parents('tr'));
	var action = $(this).data('button'),
	    exchange_id = $(this).parents('tr').data('exchange');
	
    alert(exchange_id);

    $.get("/seedbank/exchange/" + action + "/" + exchange_id, function (data) {
	console.log(data);
	alert(data);
	});

	return false;
    $('.body-form').empty();
	var message_id = $(this).data('message_id');
    var can_reply = $(this).data('reply');
    $.get("/seedbank/message/get/" + message_id, function (data) {
		if (! data){
			return false;
		}
		$('.modal-title').text(data.subject).data('message_id', data.id);
		$('.body-read').html('<p>' + data.body + '</p>');
		if ( can_reply == 1){
		$('.modal-footer')
		    .html('<button class="btn btn-default col-md-12" style="height: 50px;">\
			  {{messages.replymessage}}XXResponderXX</button>');
		  } else {
		  }
		$('.modal').modal('show');
		$(this).css('font-weight', '');

	});
}).on('mouseover', 'tbody tr', function () {
	$(this).addClass('active');
}).on('mouseout', 'tbody tr', function () {
    $(this).removeClass('active');
});
</script>
{{>footer}}
