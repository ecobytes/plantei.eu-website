{{> header}}
{{> menu}}
<div class="pageWrap background-primary">
  <div class="container">
    <div class="row lmt">
      <div class="col-md-6 text-center">
        <h1>Trocas pendentes</h1>
		<div class="row">
          <div class="col-md-12 text-center">
			<h3>Eu quero a semente</h3>
            <table class="table">
              <thead>
                <tr>
                  <th>Nome comum</th>
                  <th>Nome do utilizador</th>
                  <th>Localização</th>
                  <th>Email</th>
                </tr>
              </thead>
              <tbody>
              {{#each transactionsBy}}
                <tr data-seed_id="{{id}}">
                  <td>{{common_name}}</td>
                  <td>{{name}}</td>
                  <td>{{place_name}}</td>
                  <td>{{email}}</td>
                </tr>
              {{/each}}
              </tbody>
            </table>
		  </div>
		</div>
		<div class="row">
          <div class="col-md-12 text-center">
			<h3>Outros querem a semente</h3>
            <table class="table">
              <thead>
                <tr>
                  <th>Nome comum</th>
                  <th>Nome do utilizador</th>
                  <th>Localização</th>
                  <th>Email</th>
                </tr>
              </thead>
              <tbody>
              {{#each transactionsTo}}
                <tr data-seed_id="{{id}}">
                  <td>{{common_name}}</td>
                  <td>{{name}}</td>
                  <td>{{place_name}}</td>
                  <td>{{email}}</td>
                </tr>
              {{/each}}
              </tbody>
            </table>
		  </div>
		</div>
	  </div>
      <div class="col-md-6 text-center">
        <h1>As minhas sementes
        <span class="cell btn-group">
          <button type="button" class="btn btn-primary btn-md" id="new_seed">
            Adicionar
          </button>
        </span></h1>
        <div class="btn-group">
        </div>
        <div class="row">
            <div class="col-md-12">
            <table class="table">
              <thead>
                <tr>
                  <th>Nome comum</th>
                  <th>Nome ciêntifico</th>
                  <th>Disponível</th>
                  <th>Pública</th>
                </tr>
              </thead>
              <tbody>
              {{#each seeds}}
                <tr data-seed_id="{{id}}">
                  <td>{{common_name}}</td>
                  <td>{{sci_name}}</td>
                  <td style="text-align: center;">{{#if available.1}}X{{/if}}</td>
                  <td style="text-align: center;">{{#if public.1}}X{{/if}}</td>
                </tr>
              {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{>scripts}}
<script>
  $('tbody tr').on('click', function () {
  window.open('/seedbank/register/' + $(this).data('seed_id'), '_self');
    return false;
    }).mouseover(function () {
    $(this).addClass('active');
    }).mouseout(function () {
    $(this).removeClass('active');
  });
  $('#new_seed').on('click', function () {
    window.open('/seedbank/register', '_self');
  return false;
  });
</script>
{{>footer}}
