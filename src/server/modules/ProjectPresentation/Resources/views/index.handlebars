{{> header}}
<body id="index">
<div class="container-fluid">
 {{#unless isProduction}}
  <div class="row">
  <div class="col-md-12 envWarning text-center text-danger smt smb">
    Site running in test mode. Inserted data will be destroyed regularly.
  </div>
  </div>
  {{/unless}}
</div>
<div class="pageWrap">
  <div class="jumbotron intro background-primary">
  <div class="row lang">
  <div class="pull-right">
    <ul class="list-unstyled list-inline inline-block">
      <li>
      {{#if lang.pt}}
      <span class="text-muted">pt</span>
      {{else}}
      <a href="/pt">pt</a>
      {{/if}}
      </li>
      <li>
      {{#if lang.en}}
        <span class="text-muted">en</span>
      {{else}}
        <a href="/en">en</a>
      {{/if}}
      </li>
    </ul>
  </div>
  </div>
    <h1>
      {{siteName}}
    </h1>
    <div class="description">
    {{subtitle}}
    </div>
    <div class="row lmt">
      <div class="inscriptionDescription mmb col-md-6 col-md-offset-3 text-center"> {{{messages.intro}}}
      {{#if showSubscription}}
      <br/>{{{messages.mailingListSubscriptionTease}}}
      {{/if}}
      </div>
    </div>
    {{#if showSubscription}}
    <div class="row mmt mmb">
      <form class="newsletterSubscription col-md-6 col-md-offset-3 text-center form-horizontal" method="POST" action='/{{ langString }}/newsletter'><div class="row">
          <input type="hidden" name="_token" value="{{ csrfToken }}">
          <div class="col-md-6 mmb">
            <input type="name" placeholder="{{messages.yourName}}" class="form-control" name="name" id="nameInput" />
          </div>
          <div class="col-md-6 mmb">
            <input type="email" placeholder="{{messages.yourEmail}}" class="form-control" name="email" id="emailInput" />
          </div>
        </div>
          {{#if errors}}
          <div class="row validationErrors">
          {{#each errors}}
            <div class="alert alert-danger" role="alert">{{this}}</div>
          {{/each}}
          {{/if}}
          </div>
          <div class="text-muted mmb"><i>{{{messages.notManyEmails}}}</i></div>
          <div class="col-md-12 text-center">
            <input type="submit" class="btn btn-success btn-lg" value="{{{messages.subscribe}}}"/>
          </div>
      </form>
    </div>
    {{/if}}
