{{> header}}
<div class="pageWrap container">
  <div class="jumbotron background-primary">
    <div class="row lang">
      <div class="pull-right">
        <ul class="list-unstyled list-inline inline-block">
          <li>
          {{#if lang.pt}}
          <span class="text-muted">pt</span>
          {{else}}
          <a href="/pt">pt</a>
          {{/if}}
          </li>
          <li>
          {{#if lang.en}}
            <span class="text-muted">en</span>
          {{else}}
            <a href="/en">en</a>
          {{/if}}
          </li>
        </ul>
      </div>
    </div>
	<div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>Login</h2>
        {{> formErrors}}
        <form class="form-horizontal" role="form" method="POST" action="/{{langString}}/auth/login">
          <input type="hidden" name="_token" value="{{ csrfToken }}">
          <div class="form-group">
            <label class="control-label">Username</label>
            <span class="cell"><input type="text" class="form-control" placeholder="username or email address" name="name" value="{{ oldInput.name }}"></span>
          </div>
          <div class="form-group">
            <label class="control-label">Password</label>
            <span class="cell"><input type="password" class="form-control" placeholder="palavra passe" name="password"></span>
          </div>
          <div class="form-group lmt">
            <div class="col-md-12 text-center">
              <button type="submit" class="btn btn-primary btn-lg">
                Login
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{> scripts}}
{{>footer}}
