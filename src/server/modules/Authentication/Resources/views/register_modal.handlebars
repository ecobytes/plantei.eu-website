<form id="registerform" class="form-horizontal" role="form" method="POST" action="/{{langString}}/auth/register"{{#if login}} style="display: none"{{/if}}>
  <input type="hidden" name="_token" value="{{ csrfToken }}">

  <div class="form-group" rel="tooltip" data-placement="bottom" title="{{messages.usernameHelp }}">
    <label class="control-label">{{messages.username}}</label>
      <span class="cell"><input type="text" class="form-control" placeholder="{{messages.realornot}}" name="name" value="{{ oldInput.name }}" autocomplete="off"></span>
  </div>

  <div class="form-group" rel="tooltip" data-placement="bottom" title="{{messages.emailHelp }}">
    <label class="control-label">{{messages.email}}</label>
    <input type="text" style="display:none;" autocomplete="off">
    <span class="cell"><input type="email" class="form-control" name="email" value="{{ oldInput.email }}" autocomplete="off"></span>
  </div>

  <div class="form-group">
    <label class="control-label">{{messages.password}}</label>
<input type="password" style="display:none;">
      <span class="cell"><input type="password" class="form-control" name="password" autocomplete="off"></span>
  </div>

  <div class="form-group">
    <label class="control-label">{{messages.confirmpassword}}</label>
      <span class="cell"><input type="password" class="form-control" name="password_confirmation" autocomplete="off"></span>
  </div>
{{#if oldInput.place_name}}
<div class="row" rel="tooltip" data-placement="bottom" title="{{messages.saveLocationHelp }}">
<div class="col-md-6">
      <div class="form-group">
        <label class="control-label">{{messages.whereareyou}}</label>
        <span class="cell"><input type="text" class="form-control" placeholder="" name="place_name" value="{{ oldInput.place_name }}" autocomplete="off"></span>
      </div>
    </div>
<div class="col-md-6">
      <Div class="form-group">
        <label class="control-label">  {{ messages.saveLocation }}</label>
        <span class="cell btn-group" data-toggle="buttons">
          <label class="btn btn-default {{#if oldInput.saveLocation}}active{{/if}}">
            <input type="radio" placeholder="" name="saveLocation" value="1" {{#if oldInput.saveLocation }} checked {{/if}} /> {{ messages.yes }}
          </label>
          <label class="btn btn-default {{#unless oldInput.saveLocation}}active{{/unless}}">
            <input type="radio" name="saveLocation" {{#unless oldInput.saveLocation}}checked{{/unless}} value="0"/>{{ messages.no }}
          </label>
        </span>
      </div>
    </div>
  </div>
<div class="row" rel="tooltip" data-placement="bottom" title="{{ messages.saveLocationLatLonHelp }}">
    <div class="col-md-4">
      <div class="form-group">
        <label class="control-label">{{messages.latitude}}</label>
        <span class="cell"><input type="text" class="form-control" placeholder="" name="lat" value="{{ oldInput.lat }}" autocomplete="off"></span>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label class="control-label">{{messages.longitude}}</label>
        <span class="cell"><input type="text" class="form-control" placeholder="" name="lon" value="{{ oldInput.lon }}" autocomplete="off"></span>
      </div>
    </div>
  </div>
{{/if}}
