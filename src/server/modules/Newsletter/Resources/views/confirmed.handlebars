{{>header}}
<body id="{{pageId}}" class="background-primary">
<div class="pageWrap">
<div class="container-fluid">
	<div class="row lmt">
		<div class="col-md-6 col-md-offset-3 text-center">
				<h1>{{title}}</h1>
				{{{ message }}}
				<div class="changeToLanguage lmt lmb">
					<p>{{{changeLangsMessage}}}</p>
				{{#each changeToLanguages }}
				<form class="inline-block" action="/{{../langString}}/newsletter/{{../email}}" method="POST">
					<input type="hidden" name="_method" value="PATCH">
          <input type="hidden" name="_token" value="{{ ../csrfToken }}">
          <input type="hidden" name="prefered_language" value="{{@key}}" />
          <input type="hidden" name="verification_key" value="{{../verificationKey}}" />
					<input class="btn btn-default" type="submit" value="{{this}}" /> 
				</form>
				{{/each}}
				</div>
				{{#if buttons}}
					<div class="buttons mmt">
							{{#each buttons}}
								<a class="btn btn-default btn-lg" href="{{url}}">{{label}}</a>
							{{/each}}
					</div>
				{{/if}}
		</div>
	</div>
</div>
</div>
{{> footer}}